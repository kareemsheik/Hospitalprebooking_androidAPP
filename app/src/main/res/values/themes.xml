<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QKBooKing" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#9A494C4C</item>
        <item name="colorPrimaryVariant">#B744494A</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#BE575C5C</item>
        <item name="colorSecondaryVariant">#A3676C6C</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#C8494E50</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.QKBooKing.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.QKBooKing.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.QKBooKing.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>